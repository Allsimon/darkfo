{
  "compilerOptions": {
    "removeComments": true,
    "preserveConstEnums": true,
    "noImplicitReturns": true,
    "alwaysStrict": true, // emit "use strict"
    "skipLibCheck": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "outDir": "js",
    // "target": "es6",
    "lib": ["es6", "dom", "es2017.object"]
  },
  "includes": [
    "src/*.ts"
  ]
}